{
  "packages": [
    "packages/*"
  ],
  "version": "1.0.0-alpha.0",
  "npmClient": "npm",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "publish": {
      "preDistTag": "next",
      "noGitReset": true
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "gitRemote": "upstream",
      "message": "chore(release): publish %v"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ]
}
